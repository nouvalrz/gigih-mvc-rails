<tr>
  <th scope="row"><%= post.name %></th>
  <td><%= post.title %></td>
  <td><%= post.content %></td>
  <% if current_page?(posts_path) %>
    <td><%= link_to "Show this post", post, class: "btn btn-outline-primary" %></td>
  <% else %>
    <td>
      <div class="d-flex">
        <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-outline-primary"%>
        <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-outline-danger ml-2" %>
      </div>
    </td>
  <% end %>
</tr>
