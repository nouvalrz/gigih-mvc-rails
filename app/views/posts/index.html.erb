<div class="h-100 text-white bg-dark rounded-3 py-5">
  <div class="container"> 
    <h2>Posts</h2>
    <p>All your posts will be seen here.</p>
    <%= link_to "New post", new_post_path, class: "btn btn-outline-light"  %>
  </div>
</div>

<div class="container"> 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </tbody>
  </table>
</div>


<div class="d-flex justify-content-center mt-5">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">All Writer</button>
</div>
<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Semua Penulis</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Si Gigih
        <br>
        Zanya
        <br>
        Bale
        <br>
        Savira
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>